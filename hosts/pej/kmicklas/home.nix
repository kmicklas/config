{ ... }:

{
  imports = [
    ../../../profiles/home
  ];

  programs.autorandr = let
    monitorName = "HDMI-A-0";
    monitorFingerprint = {
      "${monitorName}" = "";
    };
    monitorConfig = {
      "${monitorName}" = {
        enable = true;
        position = "0x0";
        mode = "3840x2160";
        primary = true;
      };
    };
    tvName = "DisplayPort-2";
    tvFingerprint = {
      "${tvName}" = "";
    };
    tvConfig = {
      "${tvName}" = {
        enable = true;
        position = "3840x1080";
        mode = "1920x1080";
      };
    };
  in {
    enable = true;
    profiles = {
      normal = {
        fingerprint = monitorFingerprint;
        config = monitorConfig;
      };
      with-tv = {
        fingerprint = monitorFingerprint // tvFingerprint;
        config = monitorConfig // tvConfig;
      };
    };
  };
}
